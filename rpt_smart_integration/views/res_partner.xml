<odoo>
    <data>
        <record id="view_rpt_res_partner" model="ir.ui.view">
            <field name="name">RPT Details</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[last()]" position="after">
                    <page string="RPT Details" name="RPTDetails">
                        <group>
                            <field name="rpt_company_id"/>
                            <field name="lead_id"/>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
