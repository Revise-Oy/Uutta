<odoo>
    <data>

        <record id="view_rpt_smart_configuration_configuration_details" model="ir.ui.view">
            <field name="name">RPT Configuration</field>
            <field name="model">rpt.smart.configuration</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="RPT Configuration">
                    <field name="name"/>
                    <field name="rpt_smart_api_url"/>
                    <field name="rpt_token"/>
                </tree>
            </field>
        </record>

        <record id="form_view_rpt_smart_configuration_configuration_details" model="ir.ui.view">
            <field name="name">RPT Configuration</field>
            <field name="model">rpt.smart.configuration</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="RPT Configuration">
                    <header>
                        <button type='object' name="import_customers_from_rpt_to_odoo" string="Retrive Users"/>
                        <button type='object' name="import_leads_from_rpt_to_odoo" string="Retrive Leads"/>
                        <button name="fetch_rpt_token" type="object" string="Fetch RPT Token">
                        </button>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_redirect_to_users" type="object" class="oe_stat_button"
                                    icon="fa-users" string="Users">
                            </button>
                            <button name="action_redirect_to_leads" type="object" class="oe_stat_button"
                                    icon="fa-users" string="Leads">
                            </button>
                        </div>
                        <group>
                            <group>
                                <field name="name" required="1"/>
                                <field name="rpt_smart_api_url" required="1"/>
                                <field name="rpt_client_id" required="1"/>
                                <field name="rpt_client_secret" required="1"/>
                                <field name="rpt_token"/>
                                <field name="rpt_user_id" domain="[('rpt_id','!=',False)]"/>
                                <field name="rpt_updated_date" />
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"
                               groups="base.group_user"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="action_rpt_configuration" model="ir.actions.act_window">
            <field name="name">RPT Configuration</field>
            <field name="res_model">rpt.smart.configuration</field>
            <field name='view_mode'>tree,form</field>
        </record>

        <menuitem id="rpt_configuration" name="RPT Configuration" parent="crm.crm_menu_config"
                  sequence="5" action="action_rpt_configuration"/>
    </data>
</odoo>
